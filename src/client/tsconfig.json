{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "outDir": "./build-ts",

    "strict": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    //// UNCOMMEND FOR PRODUCTION LATER ////
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,

    "resolveJsonModule": true,
    "esModuleInterop": true,


    // "baseUrl": "src",
    // "paths": {
      //   "@client/*": ["./client/*"],
      //   "@debug/*": ["./debug/*"],
      //   "@sdk/*": ["./sdk/*"],
      //   "@sdk-pixi/*": ["./sdk-pixi/*"],
      //   "@sdk-ui/*": ["./sdk-ui/*"],
      // },
    "baseUrl": "..",
    "paths": {
      "@*": [
        "src/*"
      ]
    },

    "types": [
      "vite/client"
    ],

    "moduleResolution": "Node",
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "build"]
}
