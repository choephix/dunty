{
  "include": ["src", "vite.config.ts"],
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2018",
    
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "lib": ["dom", "es2018"],
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    },
    "types": ["vite/client"]
  }
}
