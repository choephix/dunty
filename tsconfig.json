{
  "include": ["src", "vite.config.ts"],
  "compilerOptions": {
    "declaration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2020",

    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,

    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "lib": ["dom", "es2018"],
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    },
    "types": ["vite/client"]
  }
}
